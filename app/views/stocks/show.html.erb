<p id="notice"><%= notice %></p>
<% @stock.ticker=@stock.ticker.upcase%>
<% stockdata = StockQuote::Stock.quote(@stock.ticker)%>
<h2 class="compname"> <%= stockdata.company_name %> </h2>
<% if stockdata.latest_price-stockdata.previous_close>0 %>
    <h2 class="greenprice"><%="$"+stockdata.latest_price.to_s%></h2> 
<%else%>
    <h2 class="redprice"><%="$"+stockdata.latest_price.to_s%></h2>
<%end%>

<table class="table table-striped table-hover table-condensed table-bordered">
    <thead>
        <tr>
            <th scope="col">Price</th>
            <th scope="col">Prev. Close</th>
            <th scope="col">Today's Change</th>
            <th scope="col">52 Wk High</th>
            <th scope="col">52 Wk Low</th>

        </tr>
    </thead>
    <tbody>
        <tr>
            <td> <%= stockdata.latest_price %> </td>
            <td> <%= stockdata.previous_close %> </td>
            <% if stockdata.latest_price-stockdata.previous_close>0 %>
                <td class="green"><%="+"+(100*(stockdata.latest_price-stockdata.previous_close)/stockdata.previous_close).round(2).to_s+"%"%></td> 
            <%else%>
                <td class="red"><%=(100*(stockdata.latest_price-stockdata.previous_close)/stockdata.previous_close).round(2).to_s+"%"%></td>
            <%end%>
            <td class="green"><%="$"+stockdata.week52_high.to_s%></td> 
            <td class="red"><%="$"+stockdata.week52_low.to_s%></td> 

        </tr>
    </tbody>
</table>

<%= link_to 'Edit', edit_stock_path(@stock) %> |
<%= link_to 'Back', stocks_path %>
